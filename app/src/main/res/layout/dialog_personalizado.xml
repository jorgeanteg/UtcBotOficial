<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título centrado -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título del diálogo"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <!-- Contenedor horizontal para la imagen y los textos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Imagen -->
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/leds_estandar" />


        <!-- Contenedor vertical para los textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fondo_dialogo"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="18dp"
            android:paddingRight="20dp">

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Subtítulo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Contenido -->
            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/que_es_DC"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
